@page "/projects"
@using Web.Blazor.Models
@using Web.Blazor.Models.Enums
@using Web.Blazor.Pages.Components
@using Web.Blazor.Services.ApiServices
@inject DialogService DialogService
@inject IProjectService ProjectService
@inject IToastService ToastService
@inject TooltipService tooltipService
@inherits BaseComponent

<style>
    .rz-group-header{
        flex-wrap:wrap;
    }
</style>

<PageTitle>Proje Yönetimi</PageTitle>

<RadzenText Text="Proje Yönetimi" TextStyle="TextStyle.DisplayH5" Class="mb-2">
</RadzenText>
<div class="d-flex justify-content-end align-items-center mb-2 px-2">
    <RadzenButton Icon="add" Disabled="isLoading" Text="Yeni Proje Ekle" Click="@(()=> OpenDialog(null))" />
</div>

@*    TODO: Görsellerin üzerine tıklanınca modal ile açma işlemi ekle.  *@
<RadzenDataGrid @ref="projectsGrid" Data="projectModel" GridLines="DataGridGridLines.Both" TItem="ProjectModel" ColumnWidth="200px" ColumnsShowingText="sütun gösteriliyor" AllColumnsText="Tümü"
                AllowFiltering="true" FilterMode="FilterMode.Advanced" Style="border-radius:7px" AllowColumnResize="true" Responsive="true"
                LogicalFilterOperator="LogicalFilterOperator.Or" OrOperatorText="Veya" AllowColumnPicking="true"
                AndOperatorText="Ve" ApplyFilterText="Uygula" ClearFilterText="Temizle" EqualsText="Eşittir"
                NotEqualsText="Eşit değildir" LessThanOrEqualsText="Daha az veya eşit" LessThanText="Daha az"
                GreaterThanOrEqualsText="Daha fazla veya eşit" GreaterThanText="Daha fazla" EndsWithText="İle biter"
                FilterText="Filtrele" StartsWithText="İle başlar" IsEmptyText="Veri boşsa" IsNotEmptyText="Veri boş değilse"
                IsNullText="Veri yoksa" IsNotNullText="Veri varsa" ContainsText="İçerir" DoesNotContainText="İçermez"
                AllowSorting="true" EnumFilterSelectText="Seçiniz" PagingSummaryFormat="{1} sayfadan {0}. sayfa (Toplam {2} adet kayıt)"
                AllowPaging="true" PageSize="@((int)defaultPageSize)" PagerHorizontalAlign="HorizontalAlign.Right"
                ShowPagingSummary="true" ShowHeader="true" 
                class="rz-shadow-1" AllowAlternatingRows="false">
    <HeaderTemplate>
        <RadzenStack Orientation="Orientation.Horizontal" Wrap="FlexWrap.Wrap">
            <RadzenLabel Text="Kayıt sayısı: " Component="MaxPageSize" Style="align-self:center" />
            <RadzenDropDown @bind-Value=@defaultPageSize Data="@(Enum.GetValues(typeof(PageSizes)))" Name="MaxPageSize" />
            <RadzenToggleButton Text="@(isImageVisible ? "Görselleri Gizle" : "Görselleri Göster" )"
                                ToggleButtonStyle="ButtonStyle.Success" ButtonStyle="ButtonStyle.Dark"
                                Icon="visibility_off" ToggleIcon="visibility"
                                Click=@(() => isImageVisible = !isImageVisible) />
        </RadzenStack>
    </HeaderTemplate>
    <EmptyTemplate>
        @if (isLoading)
        {
            <RadzenStack Orientation="Orientation.Horizontal" Gap="3" JustifyContent="JustifyContent.Center" AlignItems="AlignItems.Center" Style="margin: 2rem;color: lightgrey;text-align: center;">
                <i style="font-size:36px; animation: rotation 700ms linear infinite" class="notranslate rzi" id="d4DUbQirfE" _bl_2837=""><!--!-->refresh</i>
                <span>
                    Yükleniyor...
                </span>
            </RadzenStack>
        }
        else
        {
            <p style="color: lightgrey; font-size: 24px; text-align: center; margin: 2rem;">Gösterilecek kayıt bulunamadı.</p>
        }
    </EmptyTemplate>
    <Columns>
        <RadzenDataGridColumn Visible="@isImageVisible" TItem="ProjectModel" Frozen Sortable="false" TextAlign="TextAlign.Center" Width="100px" Filterable="false" Title="Proje Görseli">
            <Template Context="data">
                <RadzenStack Gap="0" Orientation="Orientation.Horizontal" class="m-0 p-0" JustifyContent="JustifyContent.Center">
                    <RadzenImage Path="@(baseUrl + data.ThumbImagePath)" class="rz-gravatar rz-gravatar-custom" />
                </RadzenStack>
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="ProjectModel" Frozen Property="Name" Title="Proje Adı" />
        <RadzenDataGridColumn TItem="ProjectModel" Property="ClientName" Title="Müşteri Adı" />
        <RadzenDataGridColumn TItem="ProjectModel" Property="ArchitectName" Title="Mimar Adı" />
        <RadzenDataGridColumn TItem="ProjectModel" Property="Location" Title="Lokasyon" />
        <RadzenDataGridColumn TItem="ProjectModel" Property="Year" Width="130px" Title="Yıl" />
        <RadzenDataGridColumn TItem="ProjectModel" Property="ProjectType"  Width="140px" Title="Proje Tipi" />
        <RadzenDataGridColumn TItem="CareerModel" Property="CreatedDate" Title="Eklenme Tarihi" FormatString="{0:d}" />
@*         <RadzenDataGridColumn TItem="CareerModel" Property="UpdatedDate" Title="Güncellenme Tarihi" FormatString="{0:d}" />
 *@
        <RadzenDataGridColumn TItem="ProjectModel" FilterMode="FilterMode.CheckBoxList" Width="145px" Property="IsCompleted" Title="Durum" FormatString="{0}" FormatProvider="@myBooleanProvider">
            <Template Context="item">
                <RadzenStack Orientation="Orientation.Horizontal" Wrap="FlexWrap.Wrap" JustifyContent="JustifyContent.Center">
                    @if (item.IsCompleted)
                    {
                        <RadzenBadge BadgeStyle="BadgeStyle.Success" Shade="Shade.Light">
                            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.25rem" Style="padding: 0 0.25rem 0 0; text-transform: none;">
                                <RadzenIcon Icon="done_all" /> Tamamlandı
                            </RadzenStack>
                        </RadzenBadge>
                    }
                    else
                    {
                        <RadzenBadge BadgeStyle="BadgeStyle.Info" Shade="Shade.Light">
                            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.25rem" Style="padding: 0 0.25rem 0 0; text-transform: none;">
                                <RadzenIcon Icon="resume" /> Devam ediyor
                            </RadzenStack>
                        </RadzenBadge>
                    }


                </RadzenStack>
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="ProjectModel" TextAlign="TextAlign.Center" Frozen FrozenPosition="FrozenColumnPosition.Right" Width="150px" Sortable="false" Filterable="false" Title="İşlemler">
            <Template Context="item">
                <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Center">
                    <RadzenButton Icon="edit" ButtonStyle="ButtonStyle.Light" Variant="Variant.Filled" MouseEnter="@(args => ShowTooltip(args,"Projeyi Düzenle"))" Size="ButtonSize.Medium" class="rz-my-1 rz-ms-1" Click="@(()=> OpenDialog(item))" aria-label="Show" />
                    <RadzenButton Icon="delete" ButtonStyle="ButtonStyle.Danger" Variant="Variant.Filled" MouseEnter="@(args => ShowTooltip(args,"Projeyi Sil"))" Size="ButtonSize.Medium" Shade="Shade.Lighter" class="rz-my-1 rz-ms-1" Click="() => Delete(item)" aria-label="Delete" />
                </RadzenStack>
            </Template>
        </RadzenDataGridColumn>
    </Columns>

</RadzenDataGrid>
@code {
    RadzenDataGrid<ProjectModel> projectsGrid;
    private ProjectModel editProjectModel = new();
    private List<ProjectModel> projectModel = [];
    private PageSizes defaultPageSize = PageSizes.Five;
    private bool isImageVisible = true;
    private bool isLoading = true;
    private bool isEdit = false;
    MyBooleanProvider myBooleanProvider = new MyBooleanProvider();
    private string baseUrl = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        baseUrl = base.SetBaseUrl();
        await LoadData();
    }
    void ShowTooltip(ElementReference elementReference, string text) => tooltipService.Open(elementReference, text, null);

    async Task OpenDialog(ProjectModel? project)
    {
        isEdit = project == null ? true : false;
        var result = await DialogService.OpenAsync<ProjectCrudComponent>(
        project == null ? "Yeni Proje Ekle" : "Seçili Projeyi Düzenle",
        new Dictionary<string, object>() { { "ExistingProject", project! } },
        new DialogOptions { Width = "700px", CloseDialogOnOverlayClick = false, AutoFocusFirstElement = false, CloseDialogOnEsc = false }
    );

        if (result is true)
        {
            if (isEdit)
                ToastService.ShowSuccess("Proje başarıyla eklendi!");
            else
                ToastService.ShowSuccess("Proje başarıyla güncellendi!");

            await LoadData();
            await projectsGrid.RefreshDataAsync();
        }
    }
    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            projectModel = await ProjectService.GetAll();
        }
        catch (Exception ex)
        {
            ToastService.ShowError(ex.Message);
        }
        isLoading = false;
        isEdit = false;
    }

    private async void Delete(ProjectModel model)
    {

        var title = $"Proje: {model.Name}";

        var result = await DialogService.OpenAsync(title, ds =>
    @<RadzenStack Gap="1.5rem">
       <RadzenText Text="Projeyi silmek istediğinize emin misiniz ?" TextStyle="TextStyle.Body1" />
       <RadzenText Text="NOT: Bu işlem geri alınamaz !" TextStyle="TextStyle.Subtitle2" class="text-danger" />
        <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceAround">
            <RadzenStack Orientation="Orientation.Horizontal">
                <RadzenButton Text="Sil" Click="() => ds.Close(true)" Style="width: 80px;" ButtonStyle="ButtonStyle.Secondary" />
            </RadzenStack>
            <RadzenStack Orientation="Orientation.Horizontal">
                <RadzenButton Text="Vazgeç" Click="() => ds.Close(false)" ButtonStyle="ButtonStyle.Base" />
            </RadzenStack>
        </RadzenStack>
    </RadzenStack>
    ,
    new DialogOptions()
    {
        Width = "400px",
        ShowClose = false
    });

        if (result == true)
        {
            base.ShowLoader();
            try
            {
                var response = await ProjectService.Delete(model.Id);
                if (!response.IsSuccessStatusCode)
                {
                    base.HideLoader();
                    string errorMessage = response.ReasonPhrase!;
                    ToastService.ShowError($"Proje silinirken bir hata oluştu. Lütfen sayfayı yenileyip tekrar deneyiniz. Hata Kodu: {response.StatusCode}");
                    return;
                }
                else
                {
                    projectModel.Remove(model);
                    await projectsGrid.Reload();
                    //await LoadData();
                    base.HideLoader();
                    ToastService.ShowSuccess("Proje başarıyla silindi !", settings => { settings.Timeout = 2;});
                    //StateHasChanged();

                }
            }
            catch (Exception ex)
            {
                base.HideLoader();
                ToastService.ShowError($"Proje silinirken bir hata oluştu. Lütfen sayfayı yenileyip tekrar deneyiniz. Hata Mesajı: {ex.Message}");
            }
        }
    }
    public class MyBooleanProvider : IFormatProvider, ICustomFormatter
    {
        public string Format(string format, object arg, IFormatProvider formatProvider)
        {
            return object.Equals(arg, true) ? "Tamamlandı" : object.Equals(arg, false) ? "Devam Ediyor" : "Belirsiz";
        }

        public object GetFormat(Type formatType)
        {
            if (formatType == typeof(ICustomFormatter))
            {
                return this;
            }

            return null;
        }
    }
}
