</RadzenDataGrid>

@code {
    RadzenDataGrid<DocumentModel> documentGrid;
    private DocumentModel editDocumentModel = new();
    private List<DocumentModel> documentModel = [];
    private PageSizes defaultPageSize = PageSizes.Five;
    private bool isImageVisible = true;
    private bool isLoading = true;
    private bool isEdit = false;
    private string baseUrl = "";
    private TooltipOptions options = new() { Position = TooltipPosition.Bottom };
    protected override async Task OnInitializedAsync()
    {
        baseUrl = base.SetBaseUrl();
        await LoadData();
    }
    void ShowTooltip(ElementReference elementReference, string text) => tooltipService.Open(elementReference, text, options);

    async Task OpenDialog(DocumentModel? document)
    {
        isEdit = document == null ? true : false;
        var result = await DialogService.OpenAsync<DocumentCrudComponent>(
        document == null ? "Yeni Döküman Ekle" : "Seçili Dökümanı Düzenle",
        new Dictionary<string, object>() { { "ExistingDocument", document! } },
    new DialogOptions { Width = "700px", CloseDialogOnOverlayClick = false, AutoFocusFirstElement = false, CloseDialogOnEsc = false }
        );

        if (result is true)
        {
            if (isEdit)
                ToastService.ShowSuccess("Döküman başarıyla eklendi!");
            else
                ToastService.ShowSuccess("Döküman başarıyla güncellendi!");

            await LoadData();
            await documentGrid.RefreshDataAsync();
        }
    }
    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            documentModel = await DocumentService.GetAllAsync();
        }
        catch (Exception ex)
        {
            ToastService.ShowError(ex.Message);
        }
        isLoading = false;
        isEdit = false;
    }

    private async void Delete(DocumentModel model)
    {

        var title = $"Döküman: {model.DocumentTitle}";

        var result = await DialogService.OpenAsync(title, ds =>
    @<RadzenStack Gap="1.5rem">
        <RadzenText Text="Dökümanı silmek istediğinize emin misiniz ?" TextStyle="TextStyle.Body1" />
        <RadzenText Text="NOT: Bu işlem geri alınamaz !" TextStyle="TextStyle.Subtitle2" class="text-danger" />
        <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceAround">
            <RadzenStack Orientation="Orientation.Horizontal">
                <RadzenButton Text="Sil" Click="() => ds.Close(true)" Style="width: 80px;" ButtonStyle="ButtonStyle.Secondary" />
            </RadzenStack>
            <RadzenStack Orientation="Orientation.Horizontal">
                <RadzenButton Text="Vazgeç" Click="() => ds.Close(false)" ButtonStyle="ButtonStyle.Base" />
            </RadzenStack>
        </RadzenStack>
    </RadzenStack>
    ,
    new DialogOptions()
    {
        Width = "400px",
        ShowClose = false
    });

        if (result == true)
        {
            base.ShowLoader();
            try
            {
                var response = await DocumentService.DeleteDocumentAsync(model.Id);
                if (!response.IsSuccessStatusCode)
                {
                    base.HideLoader();
                    string errorMessage = response.ReasonPhrase!;
                    ToastService.ShowError($"Döküman silinirken bir hata oluştu. Lütfen sayfayı yenileyip tekrar deneyiniz. Hata Kodu: {response.StatusCode}");
                    return;
                }
                else
                {
                    documentModel.Remove(model);
                    await documentGrid.Reload();
                    base.HideLoader();
                    ToastService.ShowSuccess("Döküman başarıyla silindi !", settings => { settings.Timeout = 2; });
                }
            }
            catch (Exception ex)
            {
                base.HideLoader();
                ToastService.ShowError($"Döküman silinirken bir hata oluştu. Lütfen sayfayı yenileyip tekrar deneyiniz. Hata Mesajı: {ex.Message}");
            }
        }
    }
    private async Task ShowDocument(string documentPath)
    {
        await JSRuntime.InvokeVoidAsync("open", baseUrl + documentPath, "_blank");
    }
    void RowRender(RowRenderEventArgs<DocumentModel> args)
    {
        args.Expandable = !string.IsNullOrEmpty(args.Data.DocumentDescription);
    }
}
