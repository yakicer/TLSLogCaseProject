        <RadzenDataGridColumn Visible="@isImageVisible" TItem="DocumentModel" Frozen Sortable="false" TextAlign="TextAlign.Center" Width="2rem" Filterable="false" Title="Döküman Görseli">
            <Template Context="data" >
